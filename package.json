{
  "name": "boilerplate-microservice-backend-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc --incremental",
    "clean": "rm -rf ./build && rm tsconfig.tsbuildinfo",
    "test": "npm run build && jest --runInBand --detectOpenHandles --forceExit",
    "start:dev": "nodemon --legacy-watch",
    "start:local": "npm run lint && cross-env NODE_ENV=development PORT=8080 MONGODB_URL=mongodb://localhost:27017 MONGODB_DATABASE=debitroom LOG_LEVEL=silly nodemon index.js",
    "build:local": "npm run lint && tsc",
    "test:local": "npm run build:local && jest --coverage --runInBand --detectOpenHandles --forceExit && http-server coverage/ -o index.html",
    "setup-local-windows": "husky install",
    "setup-local-linux": "husky install && chmod ug+x .husky/* && chmod ug+x .git/hooks/*",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "precommit": "npm run lint-fix",
    "prepush": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debitroom-software/boilerplate-microservice-backend-nodejs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/debitroom-software/boilerplate-microservice-backend-nodejs/issues"
  },
  "homepage": "https://github.com/debitroom-software/boilerplate-microservice-backend-nodejs#readme",
  "devDependencies": {
    "@types/jest": "29.5.2",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-express": "^1.12.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "supertest": "6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@types/express": "4.17.17",
    "@types/node": "18.16.16",
    "@types/swagger-ui-express": "4.1.3",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "swagger-autogen": "^2.23.1",
    "swagger-ui-express": "4.6.3",
    "typescript": "^5.0.0",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0"
  }
}
