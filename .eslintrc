{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"overrides": [
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
    "max-len": [
      "error", 
      { 
        "code": 150
      }
    ],
		"array-callback-return": [
			"error"
		],
		"no-await-in-loop": [
			"warn"
		],
		"no-class-assign": [
			"warn"
		],
		"no-constant-binary-expression": [
			"error"
		],
		"no-constant-condition": [
			"error"
		],
		"no-constructor-return": [
			"warn"
		],
		"no-control-regex": [
			"warn"
		],
		"no-debugger": [
			"warn"
		],
		"arrow-body-style": [
			"error",
			"as-needed"
		],
		"block-scoped-var": [
			"error"
		],
		"camelcase": [
			"error"
		],
		"complexity": [
			"error",
			10
		],
		"consistent-return": [
			"error",
			{
				"treatUndefinedAsUnspecified": true
			}
		],
		"curly": [
			"error",
			"all"
		],
		"default-case": [
			"error"
		],
		"default-case-last": [
			"warn"
		],
		"default-param-last": [
			"error"
		],
		"eqeqeq": [
			"error",
			"smart"
		],
		"accessor-pairs": [
			"error"
		],
		"grouped-accessor-pairs": [
			"error",
			"getBeforeSet"
		],
		"guard-for-in": [
			"error"
		],
		"id-denylist": [
			"error",
			"any",
			"Number",
			"number",
			"String",
			"string",
			"Boolean",
			"boolean",
			"Undefined",
			"undefined"
		],
		"init-declarations": [
			"error",
			"always"
		],
		"no-floating-decimal": [
			"error"
		],
		"no-implicit-coercion": [
			"warn"
		],
		"no-implied-eval": [
			"error"
		],
		"no-invalid-this": [
			"error"
		],
		"no-lonely-if": [
			"error"
		],
		"no-loop-func": [
			"error"
		],
		"no-magic-numbers": [
			"error",
			{
				"ignore": [
					-1,
					0,
					1
				],
				"ignoreArrayIndexes": true,
				"ignoreDefaultValues": true
			}
		],
		"no-nested-ternary": [
			"error"
		],
		"no-new": [
			"error"
		],
		"no-param-reassign": [
			"warn"
		],
		"no-redeclare": [
			"warn"
		],
		"no-restricted-exports": [
			"error", 
			{
				"restrictedNamedExports": [
					"default",
					"then",
					"catch",
					"finally",
					"length",
					"prototype",
					"constructor"
				]
			}
		],
		"@typescript-eslint/no-shadow": [
			"error"
		],
		"no-throw-literal": [
			"error"
		],
		"no-undef-init": [
			"error"
		],
		"no-unneeded-ternary": [
			"error"
		],
		"no-var": [
			"error"
		],
		"no-warning-comments": [
			"warn"
		],
		"prefer-const": [
			"error"
		],
		"prefer-object-has-own": [
			"error"
		],
		"prefer-promise-reject-errors": [
			"warn"
		],
		"prefer-spread": [
			"error"
		],
		"prefer-template": [
			"error"
		],
		"require-await": [
			"warn"
		],
		"sort-imports": [
			"error"
		],
		"yoda": [
			"error"
		],
		// Layout rules
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"arrow-spacing": [
			"error"
		],
		"brace-style": [
			"error",
			"stroustrup"
		],
		"eol-last": [
			"error",
			"always"
		],
		"func-call-spacing": [
			"error",
			"never"
		],
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"key-spacing": [
			"error",
			{
				"afterColon": true,
				"beforeColon": false,
				"mode": "strict"
			}
		],
		"keyword-spacing": [
			"error",
			{
				"after": true,
				"before": true
			}
		],
		"lines-around-comment": [
			"error",
			{
				"beforeBlockComment": true
			}
		],
		"max-statements-per-line": [
			"error",
			{
				"max": 1
			}
		],
		"new-parens": [
			"error",
			"always"
		],
		"no-trailing-spaces": [
			"error",
			{
				"skipBlankLines": true
			}
		],
		"no-whitespace-before-property": [
			"error"
		],
		"space-infix-ops": [
			"error",
			{
				"int32Hint": true
			}
		]
	}
}
